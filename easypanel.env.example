# Variáveis de Ambiente para EasyPanel
# Copie este arquivo e preencha com seus valores

# ============================================
# POSTGRESQL
# ============================================
POSTGRES_USER=adriel
POSTGRES_PASSWORD=GERAR_SENHA_FORTE_AQUI
POSTGRES_DB=adriel

# ============================================
# BACKEND
# ============================================
NODE_ENV=production
PORT=3333

# Database URL (ajuste o nome do serviço se necessário)
DATABASE_URL=postgresql://adriel:GERAR_SENHA_FORTE_AQUI@adriel-postgres:5432/adriel

# Redis URL (ajuste o nome do serviço se necessário)
REDIS_URL=redis://adriel-redis:6379/0

# JWT Secrets (gerar chaves fortes de 32+ caracteres)
JWT_SECRET=GERAR_CHAVE_FORTE_32_CARACTERES_MINIMO
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=GERAR_OUTRA_CHAVE_FORTE_32_CARACTERES
REFRESH_TOKEN_EXPIRES_IN=7d

# Application URL (seu domínio)
APP_URL=https://seu-dominio.com

# Storage
STORAGE_DRIVER=local

# ============================================
# FRONTEND
# ============================================
# URL do backend (mesmo domínio ou subdomínio)
VITE_API_URL=https://seu-dominio.com/api/v1

